@{
    ViewData["Title"] = "Inicio de Sesión ";
}

<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/styleInicioSesionUsuario.css" asp-append-version="true" />
<link rel="stylesheet" href="~/Web_Recocycle.styles.css" asp-append-version="true" />

<script src="~/js/scriptUsuario.jss" asp-append-version="true"></script>

<div class="screen">
</div>

<div class="container-welcome">
    <div class="header">
        <img src="~/imagenes/logo.png" alt="Logo" class="logo" />
        <div class="title">
            <h1>INICIAR SESION</h1>
            <hr />
        </div>
    </div>

    <div class="container-login">
        <div class="card">
            <form asp-action="Login" method="post">
                <div class="form-group">
                    <label for="Correo">Correo electrónico:</label>
                    <input type="email" id="Correo" name="Correo" placeholder="Ej: example@gmail.com">
                </div>

                <div class="form-group">
                    <label for="Contrasenia">Contraseña:</label>
                    <input type="password" id="Contrasenia" name="Contrasenia">
                </div>

                <div class="form-actions">
                    <button type="submit" class="btnG btn-login">INICIAR</button>
                </div>

                <p class="register-text">
                    ¿No tienes una cuenta?
                    <a href="@Url.Action("RegistroUsuario", "Home")">Regístrate aquí</a>
                </p>
            </form>
        </div>
    </div>

    @section Scripts {
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
        <script>
            @if (ViewBag.ErrorLogin != null && (bool)ViewBag.ErrorLogin)
            {
                    <text>
                        Swal.fire({
                            title: '<span style="font-size:30px; font-weight:bold; color:white;">ERROR</span>',
                            html: `
                                <p style="font-size:20px; margin:10px 0; color:white;">
                                    Correo o contraseña incorrectos.
                                </p>
                                <p style="font-size:18px; margin:10px 0; color:white;">
                                    Intente nuevamente.
                                </p>
                            `,
                            icon: 'error',
                            showConfirmButton: true,
                            confirmButtonText: 'CERRAR',
                            confirmButtonColor: '#8B0000',
                            allowOutsideClick: false,
                            allowEscapeKey: false,
                            background: 'linear-gradient(#064d1a, black)',
                            customClass: {
                                popup: 'swal-custom-popup'
                            }
                        }).then(() => {
                            // Redirigir al login otra vez
                            window.location.href = '@Url.Action("InicioSesionUsuario", "Home")';
                        });
                    </text>
            }
        </script>
    }
    <footer>
    </footer>
</div>
